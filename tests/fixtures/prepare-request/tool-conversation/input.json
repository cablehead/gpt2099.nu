{
  "messages": [
    {
      "role": "user",
      "content": [
        {
          "type": "text",
          "text": "Read my config file"
        }
      ]
    },
    {
      "role": "assistant",
      "content": [
        {
          "type": "tool_use",
          "id": "tool123",
