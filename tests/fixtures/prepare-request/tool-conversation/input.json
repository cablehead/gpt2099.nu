          "content": [
            {
              "type": "text",
              "text": "{\"database\": \"sqlite://app.db\", \"debug\": true}",
              "mimeType": "application/json"
            }
          ]
        }
      ]
    },
    {
      "role": "user",
      "content": [
        {
          "type": "text",
          "text": "Now create a backup of this config"
        }
      ]
    }
  ],
  "options": {
    "servers": ["filesystem"]
  }
